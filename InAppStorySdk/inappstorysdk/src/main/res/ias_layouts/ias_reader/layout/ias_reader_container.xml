<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/screen_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.inappstory.sdk.stories.ui.widgets.elasticview.ElasticDragDismissFrameLayout
        android:id="@+id/draggable_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="false"
        app:dragDismissDistance="250dp"
        app:dragDismissEnableBottomDrag="true"
        app:dragDismissScale="0.90">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_fragments_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF0000" />

        </androidx.core.widget.NestedScrollView>
    </com.inappstory.sdk.stories.ui.widgets.elasticview.ElasticDragDismissFrameLayout>

    <FrameLayout
        android:id="@+id/ias_dialog_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/screen_block"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/ias_outer_top_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>