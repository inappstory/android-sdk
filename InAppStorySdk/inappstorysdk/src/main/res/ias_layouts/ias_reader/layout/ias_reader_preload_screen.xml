<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@id/ias_parent_container"
    android:background="#0000FF"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:id="@id/ias_black_top"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <com.inappstory.sdk.stories.ui.widgets.readerscreen.buttonspanel.ButtonsPanel
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/black"
                android:elevation="2dp"
                android:id="@id/ias_buttons_panel"
                android:layout_height="60dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_above="@id/ias_buttons_panel"
                android:id="@id/ias_rounded_container"
                android:elevation="1dp"
                android:background="#FFFF00"
                android:layout_height="match_parent"/>
            <View
                android:layout_width="match_parent"
                android:layout_above="@id/ias_buttons_panel"
                android:layout_alignParentBottom="true"
                android:background="@color/black"
                android:layout_height="0dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:elevation="8dp"
                android:layout_alignParentTop="true"
                android:minHeight="30dp"
                android:id="@id/ias_timeline_container"
                android:layout_height="wrap_content">
                <com.inappstory.sdk.stories.ui.widgets.readerscreen.timeline.StoryTimeline
                    android:layout_width="match_parent"
                    android:id="@id/ias_timeline"
                    android:layout_height="3dp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:scaleType="fitCenter"
                    android:id="@id/ias_close_button"
                    app:srcCompat="@drawable/ic_stories_close"
                    android:layout_height="30dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:id="@id/ias_black_bottom"
            android:layout_height="0dp"/>
    </LinearLayout>
</FrameLayout>