<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="120dp"
        android:id="@+id/container"
        android:layout_height="120dp">
        <View
            android:layout_width="match_parent"
            android:id="@+id/border"
            android:background="@drawable/cs_story_border_square"
            android:layout_height="match_parent"/>
        <com.inappstory.sdk.stories.ui.views.RoundedCornerLayout
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:background="#000"
            android:id="@+id/item_cv"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:id="@+id/image"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent" />



                <com.inappstory.sdk.stories.ui.video.VideoPlayer
                    android:layout_width="match_parent"
                    android:id="@+id/video"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="match_parent"
                    android:elevation="8dp"
                    android:id="@+id/cell_gradient"
                    android:layout_height="match_parent"
                    android:background="@drawable/story_gradient_black" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_margin="8dp"
                    android:id="@+id/hasAudio"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:alpha="0.6"
                    android:elevation="9dp"
                    android:src="@drawable/ic_sound_cell"
                    android:layout_height="24dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:ellipsize="end"
                    android:id="@+id/title"
                    android:maxLines="4"
                    android:elevation="9dp"
                    android:textSize="14sp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:id="@+id/source"
                    android:elevation="9dp"
                    android:textColor="#FFF"
                    android:maxLines="3"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:ellipsize="end"
                    android:text="test dasd asd as asdas as asd"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </com.inappstory.sdk.stories.ui.views.RoundedCornerLayout>

    </RelativeLayout>
</RelativeLayout>