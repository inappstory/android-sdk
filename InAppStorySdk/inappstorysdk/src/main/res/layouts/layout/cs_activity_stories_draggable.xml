<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inappstory.sdk.stories.ui.oldreader.StoriesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/animatedContainer"
        android:layout_height="match_parent">

        <View
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <com.inappstory.sdk.stories.ui.widgets.elasticview.ElasticDragDismissFrameLayout
            android:id="@+id/draggable_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="false"
            app:dragDismissDistance="250dp"
            app:dragDismissEnableBottomDrag="true"
            app:dragDismissScale="0.90">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <FrameLayout
                    android:id="@+id/fragments_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </androidx.core.widget.NestedScrollView>
        </com.inappstory.sdk.stories.ui.widgets.elasticview.ElasticDragDismissFrameLayout>

        <View
            android:id="@+id/blockView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>